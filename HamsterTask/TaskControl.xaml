<UserControl x:Class="HamsterTask.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HamsterTask"
             mc:Ignorable="d" 
             d:DesignHeight="136" d:DesignWidth="306">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#3F24A8C7" Offset="0.897"/>
                <GradientStop Color="#FF72E0A9"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="TaskName" Grid.ColumnSpan="2" Content="Name" FontSize="12"/>
        <Label x:Name="TaskDescript" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3" FontSize="8">
            <TextBlock TextWrapping="Wrap" ></TextBlock>
        </Label>
        <Label x:Name="TaskID" Visibility="Hidden"/>
        <ListBox Grid.Row="1" Grid.Column="3" Grid.RowSpan="3">

        </ListBox>
        <CheckBox x:Name="IsDone" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"  HorizontalAlignment="Right" Margin="0,10,4,10" Width="46"></CheckBox>


        <Label Grid.Row="0" Grid.Column="2" x:Name="TaskExecutor"  Content="{DynamicResource TaskExecutor}" FontSize="8" VerticalContentAlignment="Top"/>
        <Label Grid.Row="0" Grid.Column="2" x:Name="UserExecutor"  FontSize="8" VerticalContentAlignment="Center"/>
        <Label Grid.Row="0" Grid.Column="2" x:Name="deadLine" FontSize="7" VerticalContentAlignment="Bottom"/>
    </Grid>
</UserControl>
