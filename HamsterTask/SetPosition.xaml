<Window x:Class="HamsterTask.SetPosition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HamsterTask"
        mc:Ignorable="d"
        Title="{DynamicResource SetPosition}" Height="172.445" Width="671.898">
    <Grid>
        <Label Content="{DynamicResource PositionName}" Grid.Column="0" FontSize="15" HorizontalAlignment="Right" Margin="0,62,476,28" RenderTransformOrigin="-0.125,0.677" Width="142" />
        <TextBox x:Name="posName" FontSize="14" Margin="193,63,220,48"/>
        <Button x:Name="AddBTN" Content="{DynamicResource save}" HorizontalAlignment="Left" Margin="480,57,0,0" VerticalAlignment="Top" Width="129" Height="36" BorderBrush="{x:Null}" Foreground="Black" Click="AddBTN_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFF4FAFF"/>
                    <GradientStop Color="#FFBCEAFF" Offset="0.608"/>
                    <GradientStop Color="#FF60B4DA" Offset="0.919"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
