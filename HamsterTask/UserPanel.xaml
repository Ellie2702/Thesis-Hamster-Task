<Window x:Class="HamsterTask.UserPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HamsterTask"
        mc:Ignorable="d"
        Title="UserPanel" Height="550" Width="800">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        
        <Image x:Name="UserAvatar" Grid.Row="1" Grid.RowSpan="2" Margin="0,0,5,0"/>
        <Label x:Name="UserName" Grid.Column="1" Grid.Row="1" FontSize="15" VerticalContentAlignment="Top"/>
        <Label x:Name="TaskCount" Grid.Column="1" Grid.Row="1" FontSize="15" VerticalContentAlignment="Center"/>
        <Label x:Name="Company" Grid.Column="1" Grid.Row="1" FontSize="15" VerticalContentAlignment="Bottom"/>


        <GroupBox x:Name="UserInform" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" BorderBrush="#4C488897">
            <GroupBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#7253BDD4" Offset="0"/>
                    <GradientStop Color="#7272D2FF" Offset="1"/>
                </LinearGradientBrush>
            </GroupBox.Background>
            
        
        </GroupBox>
        <GroupBox x:Name="Graphic" Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="3">
            <GroupBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#3376A7B6" Offset="0.958"/>
                    <GradientStop Color="#33FFFFFF"/>
                </LinearGradientBrush>
            </GroupBox.Background>

        </GroupBox>

        <Button x:Name="UserTasks" Grid.Column="4" Grid.Row="1" Margin="15"/>
        <Button x:Name="UserMessage" Grid.Column="4" Grid.Row="2" Margin="15"/>
        <Button x:Name="UserReport" Grid.Column="4" Grid.Row="3" Margin="15"/>
        <Button x:Name="UserCustom" Grid.Column="4" Grid.Row="4" Margin="15"/>
        <Button x:Name="Exit" Grid.Column="4" Grid.Row="5" Margin="15"/>
        

        <Rectangle  Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="100">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF031419" Offset="0.989"/>
                    <GradientStop Color="#FF126A7A" Offset="0.342"/>
                    <GradientStop Color="#FF579CB6" Offset="0.232"/>
                    <GradientStop Color="#FF0E6376" Offset="0.644"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>
